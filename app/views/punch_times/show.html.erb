<div class='row'>
  <div class='col-md-6'>
    <h3 class="punch_date"><%= month_and_day(@punch_time.in) %></h3> 
    <table class="table table-striped">
      <tr>
        <td style="width: 25%">Time In:</td>
        <td><%= date_and_time(@punch_time.in) %></td>
      </tr>
      <tr>
        <td style="width: 25%">Time Out:</td>
        <td><%= date_and_time(@punch_time.out) %></td>
      </tr>
      <tr>
        <td style="width:25%">Duration</td>
        <td><%= display_punch_duration(@punch_time.total_punch_time) %></td>
      </tr>
      <tr>
        <td style="width: 25%">Organization</td>
        <td><%= @organization.name if @organization %></td>
      </tr>
      <tr>
        <td style="width: 25%">Project</td>
        <td><%= @project.name if @project %></td>
      </tr>
      <tr>
        <td style="width: 25%">Latitude</td>
        <td><%= @punch_time.latitude %>
      </tr>
      <tr>
        <td style="width: 25%">Longitude</td>
        <td><%= @punch_time.longitude %>
      </tr>
    </table>
  </div>
  <% if has_location?(@punch_time) %>
  <div class="punch col-md-4">
    <img src="http://maps.googleapis.com/maps/api/staticmap?markers=color:blue%7Clabel:PunchIn%7C<%=@punch_time.latitude%>,<%=@punch_time.longitude%>&zoom=12&size=250x250&sensor=false">
  </div>
  <% end %>
</div>
