<%= form_for [@user, PunchTime.new], :html => {:class => "form-inline", role: "form"} do |f| %>
  <%= f.hidden_field :user_id %>
  <div class="form-group">
    <%= f.label "Project Id", class: "sr-only" %>
    <%= f.text_field :project_id, class: "form-control", placeholder: "Project"  %>
  </div>
  <div class="form-group">
    <%= f.label "Organization Id", class: "sr-only" %>
    <%= f.text_field :organization_id, class: "form-control", placeholder: "Organization" %>
  </div>
  <div class="form-group">
    <%= f.label "Tag", class: "sr-only" %>
    <%= f.text_field :tag, class: "form-control", placeholder: "Tag" %>
  </div>
  <%= button_tag "Submit", :class => "btn btn-default", :type => "submit" %>
<% end %>
