<%= show_punch_form %>
<h3 class='date_heading'> Today </h3>
<% @punch_times.each do |punch_time| %>
  <div class='punch col-md-9'>
    <span class='date col-md-2'><%= punch_time.in.strftime('%b %d') %></span>
    <span>
      <%=link_to "#{hour_and_minute(punch_time.in)}", user_punch_time_path(@user, punch_time), class: "col-md-2" %>
    <% if punch_time.complete? %>
      <%= hour_and_minute(punch_time.out) if punch_time.out %>
     </span>
     <span>
        <%= display_punch_duration(punch_time.total_punch_time) if punch_time.total_punch_time %>
      </span>
    <% else %>
      <div class='col-md-2'>
        <%= link_to "Out", user_out_path(current_user, punch_time.id), :method=> :put, class: "punch_out" %>
      </div>
    <% end %>
  <%= punch_time.tag %>
  </div>
<% end %>
